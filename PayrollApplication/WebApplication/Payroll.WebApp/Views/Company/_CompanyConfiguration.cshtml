<script>
   $(document).ready(function () {
    const today = new Date();
    const currentYear = today.getFullYear();
    const startOfYear = new Date(currentYear, 0, 1); // YYYY-01-01

    $('#sdate').datepicker({
        format: 'yyyy-mm-dd',
        startDate: startOfYear,
        endDate: today,
        autoclose: true
    }).on('changeDate', function (e) {
        const selectedDate = e.date;

        // Calculate end date = 12 months after start date - 1 day
        const endDate = new Date(selectedDate);
        endDate.setFullYear(endDate.getFullYear() + 1);
        endDate.setDate(endDate.getDate() - 1);

        // Format date in local time
        const formattedEndDate =
            endDate.getFullYear() + '-' +
            String(endDate.getMonth() + 1).padStart(2, '0') + '-' +
            String(endDate.getDate()).padStart(2, '0');

        $('#edate').val(formattedEndDate);
        $("#edate-error").text("").hide();
          $("#sdate-error").text("").hide();
    });

    $('#edate').prop('readonly', true);
    $('#edate').datepicker('destroy');

    $(".btn-datepicker").on("click", function () {
        $(this).prev("input").datepicker("show");
    });
});


</script>