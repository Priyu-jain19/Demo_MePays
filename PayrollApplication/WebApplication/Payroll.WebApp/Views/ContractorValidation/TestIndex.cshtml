<!-- Filter Modal -->
<div class="modal fade right-align standard-filter-modal drawer" id="filterModal" tabindex="-1" data-bs-backdrop="true" aria-hidden="true">
    <div class="modal-dialog modal-dialog-slideout" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <p class="title-primary-md-600">Filter</p>
                <button type="button" class="btn" data-bs-dismiss="modal" aria-label="Close">
                    <span class="sprite-icons close-icon"></span>
                </button>
            </div>

            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">

                        <!-- Pay Period -->
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="form-label">Pay Period</label>
                                <div class="row g-2">
                                    <input type="hidden" id="hiddenMonthId" />
                                    <div class="col">
                                        <input type="text" class="form-control" id="monthName" placeholder="Month" readonly />
                                    </div>
                                    <div class="col">
                                        <input type="text" class="form-control" id="year" placeholder="Year" readonly />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Company -->
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label for="contractorcompany" class="form-label">Company</label>
                                <select class="form-select" id="contractorcompany">
                                    <option selected>Select company</option>
                                </select>
                            </div>
                        </div>

                        <!-- Contractor Name -->
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label for="contractorName" class="form-label">Contractor - Work Order</label>
                                <select class="form-control" id="contractorName" multiple>
                                    <!-- Options will be populated dynamically -->
                                </select>
                            </div>
                        </div>

                        <!-- Location -->
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label for="locationName" class="form-label">Location</label>
                                <select class="form-control" id="locationName" multiple>
                                    <!-- Options will be populated dynamically -->
                                </select>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <div class="btn_group">
                    <button type="button" class="btn btn-transparent-danger" id="resetFilters">Reset</button>
                    <div class="btn-action-variants">
                        <button class="btn btn_primary_outline_md" data-bs-dismiss="modal"
                                aria-label="Close">
                            Cancel
                        </button>
                        <button type="button" id="applyFilters" class="btn btn_primary loader-dot-pulse">Save Changes</button>
                    </div>
                </div>
            </div>

