                    function getTruncatedFormula(formula) {
                        const maxFormulaLength = 30; // Set your desired max display length

                        if (!formula) return "";
                        return formula.length > maxFormulaLength
                            ? formula.substring(0, maxFormulaLength) + "..."
                            : formula;
                    }

